<Window x:Class="POSSEDQI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POSSEDQI - إدارة المبيعات" 
        WindowState="Maximized"
        ResizeMode="CanResize"
        FontFamily="Calibri"
        Background="#0f172a" 
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.ColumnSpan="2" Background="#162033" LastChildFill="True">
            <TextBlock Text="POSSEDQI - إدارة المبيعات"
                       Foreground="White" FontSize="16" FontWeight="Bold"
                       VerticalAlignment="Center" Margin="20,0"/>
        </DockPanel>

        <!-- Sidebar -->
        <StackPanel Grid.Row="1" Grid.Column="0" Background="#1e293b" Padding="10" VerticalAlignment="Stretch">
            <StackPanel>
                <Button Content="نقطة البيع" Height="40" Margin="0,5"
                        Background="#0285c7" Foreground="White"
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                <Button Content="المخزون" Height="40" Margin="0,5"
                        Background="#0285c7" Foreground="White"
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                <Button Content="الفواتير" Height="40" Margin="0,5"
                        Background="#0285c7" Foreground="White"
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                <Button Content="الديون" Height="40" Margin="0,5"
                        Background="#0285c7" Foreground="White"
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                <Button Content="الزبائن" Height="40" Margin="0,5"
                        Background="#0285c7" Foreground="White"
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                <Button Content="التقارير" Height="40" Margin="0,5"
                        Background="#0285c7" Foreground="White"
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                <Button Content="الزكاة" Height="40" Margin="0,5"
                        Background="#0285c7" Foreground="White"
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>

            <!-- زر الخروج -->
            <StackPanel VerticalAlignment="Bottom" Margin="0,20,0,0">
                <Button Content="خروج" Height="40"
                        Background="Crimson" Foreground="White"
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                        Click="Exit_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Main Content -->
        <ContentControl x:Name="MainContent"
                        Grid.Row="1" Grid.Column="1"
                        Margin="10" Background="#293548"/>
        <!-- واجهة تسجيل الدخول -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <!-- عنوان الواجهة -->
            <TextBlock Text="تسجيل الدخول" Foreground="White" FontSize="18" Margin="0,0,0,20" TextAlignment="Center"/>

            <!-- خانة إدخال كلمة السر -->
            <PasswordBox x:Name="PasswordBox" Height="30" FontSize="16" Margin="0,0,0,10"/>

            <!-- زر الدخول -->
            <Button Content="دخول" Click="Login_Click" Background="#38bef8" Foreground="White" FontWeight="Bold"/>

            <!-- رسالة خطأ تظهر فقط عند الخطأ -->
            <TextBlock x:Name="LoginError" Text="كلمة السر غير صحيحة"
                   Foreground="Red" Visibility="Collapsed" FontSize="12" Margin="0,10,0,0" TextAlignment="Center"/>
        </StackPanel>

    </Grid>
</Window>
