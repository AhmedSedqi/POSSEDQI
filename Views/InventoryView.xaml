<UserControl x:Class="POSSEDQI.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#0f172a">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- البحث والأزرار -->
            <RowDefinition Height="*"/>
            <!-- المنتجات -->
        </Grid.RowDefinitions>

        <!-- شريط البحث والتحكم -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 5" VerticalAlignment="Top">
            <!-- مربع البحث -->
            <TextBox x:Name="SearchBox" Width="200" Height="32" Margin="0,0,10,0" Padding="5" VerticalContentAlignment="Center"
                     Text="... ابحث عن" HorizontalContentAlignment="Right" Foreground="Gray"
                     GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus" FontSize="14"/>

            <!-- فلترة حسب الفئة -->
            <ComboBox Width="200" Height="32" Margin="0,0,115,0" Padding="5" FontSize="16"
                      VerticalContentAlignment="Center" HorizontalContentAlignment="Right">
                <ComboBoxItem Content="كل الفئات" IsSelected="True" FontSize="16"/>
                <ComboBoxItem Content="فئة 1"/>
                <ComboBoxItem Content="فئة 2"/>
            </ComboBox>

            <!-- أزرار التحكم -->
            <Button Width="100" Height="32" Margin="0,0,100,0" Background="Green"  Click="AddProductButton_Click"
                    Foreground="White" ToolTip="إضافة منتج إلى المخزون">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="إضافة " VerticalAlignment="Center" FontSize="18" Margin="0,0,10,0" FontWeight="Bold"/>
                    <Image Source="/Icons/add.png" Width="20" Height="20" />
                </StackPanel>
            </Button>
            <Button Width="100" Height="32" Margin="0,0,100,0" Background="Red" Foreground="White" ToolTip="حذف منتج من المخزون">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="حذف" VerticalAlignment="Center" FontSize="18" Margin="0,0,10,0" FontWeight="Bold"/>
                    <Image Source="/Icons/delete.png" Width="20" Height="20" />
                </StackPanel>
            </Button>
            <Button Width="90" Height="32" Margin="0,0,100,0" Background="Orange" Foreground="White">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="تعديل" VerticalAlignment="Center" FontSize="18" Margin="0,0,10,0" FontWeight="Bold"/>
                    <Image Source="/Icons/edit.png" Width="20" Height="20" />
                </StackPanel>
            </Button>

            <Button Width="150" Height="32" Margin="0,0,10,0" Background="#0285c7" Foreground="White">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="طباعة الكتالوج" VerticalAlignment="Center" FontSize="18" Margin="0,0,10,0" FontWeight="Bold"/>
                    <Image Source="/Icons/print.png" Width="20" Height="20" />
                </StackPanel>
            </Button>

        </StackPanel>

        <!-- عرض المنتجات على شكل بطاقات -->
        <Border Grid.Row="1" CornerRadius="10" Background="#162033" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ProductsItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="155" Height="200" Background="White" Margin="2" CornerRadius="10">
                                <StackPanel Margin="4">
                                    <Image Source="{Binding ImagePath}" Height="100" Stretch="Uniform"/>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" TextAlignment="Center"
                                               Foreground="Black" Margin="0,2,0,0" TextWrapping="Wrap" MaxHeight="40"/>
                                    <TextBlock Text="{Binding Description}" Foreground="#e100fa" TextWrapping="Wrap" MaxHeight="40"
                                               FontWeight="Bold" FontSize="12" TextAlignment="Center"/>
                                    <TextBlock Text="{Binding Quantity, StringFormat='الكمية: {0}'}" 
                                               Foreground="#062945" Margin="0,5,0,0" FontWeight="Bold" FontSize="16"
                                               TextAlignment="Center"/>
                                    <TextBlock Text="{Binding Price, StringFormat={}{0:F2} Dh}" FlowDirection="LeftToRight"
                                               Foreground="#ed1602" FontWeight="Bold" Language="fr-FR"
                                               FontSize="20" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>