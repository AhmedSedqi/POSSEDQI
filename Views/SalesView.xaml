<UserControl x:Class="POSSEDQI.Views.SalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0f172a">
    <Grid Margin="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- عمود المنتجات -->
                <ColumnDefinition Width="1*"/>
                <!-- عمود الفاتورة -->
            </Grid.ColumnDefinitions>

            <!-- العمود الأول: المنتجات مع الفئات -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- سطر الفئات -->
                    <RowDefinition Height="*"/>
                    <!-- سطر عرض المنتجات -->
                </Grid.RowDefinitions>

                <!-- سطر الفئات مع تمرير أفقي -->
                <Grid Grid.Row="0" Height="60" Margin="0,0,0,5" Background="#162033">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- زر "الكل" -->
                    <Button Grid.Column="0" Content="عرض الكل" Margin="5,5" Padding="5,2" Background="Green"
                            FontSize="14" Foreground="White" FontWeight="Bold" Height="30"
                            VerticalAlignment="Center"/>

                    <!-- ScrollViewer للفئات -->
                    <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" VerticalAlignment="Center">
                        <StackPanel x:Name="CategoriesPanel" Orientation="Horizontal" />
                    </ScrollViewer>

                    <!-- زر "إضافة الفئة" -->
                    <Button Grid.Column="2" Command="{Binding OpenAddCategoryCommand}" Content="إضافة"
                            Margin="5,2" Padding="5,2"
                            Background="Green" 
                            FontSize="14" Foreground="White" FontWeight="Bold" Height="30"
                            VerticalAlignment="Center"/>
                </Grid>

                <!-- سطر عرض المنتجات -->
                <ScrollViewer Grid.Row="1" Margin="0,5,5,0">
                    <WrapPanel x:Name="ProductsPanel" ItemWidth="150" ItemHeight="180">
                        <Border Width="140" Height="160" Background="White" CornerRadius="7" Margin="5">
                            <StackPanel>
                                <Image Source="/Icons/sample-product.jpg" Height="80" Margin="5" Stretch="Uniform"/>
                                <TextBlock Text="منتج 1" Foreground="Black" FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
                                <TextBlock Text="الكمية: 10" Foreground="Black" FontSize="15" FontWeight="Bold" TextAlignment="Center"/>
                                <TextBlock Text="السعر: 15.00 درهم" Foreground="Black" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </ScrollViewer>
            </Grid>

            <!-- العمود الثاني: واجهة الفاتورة كما هي بدون تعديل -->
            <Border Grid.Column="1" Background="#162033" Padding="10" Margin="10,0,0,0" CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="0,0,0,10" LastChildFill="True">
                        <Button Width="35" Height="35" Background="#0285c7" DockPanel.Dock="Right" Margin="5,0,0,0" ToolTip="اختيار زبون">
                            <Image Source="/Icons/users.png" Width="20" Height="20"/>
                        </Button>
                        <TextBox VerticalAlignment="Center" FontSize="18" ToolTip="أدخل اسم الزبون"
                                 HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="33"/>
                    </DockPanel>

                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBlock Text="التاريخ" HorizontalAlignment="Right" FontWeight="Bold"
                                   FontSize="14" Foreground="White" Margin="0,0,0,3"/>
                        <DatePicker/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,0,0,10">
                        <TextBlock Text="رقم الفاتورة" Foreground="White" Margin="0,0,0,3"
                                   HorizontalAlignment="Right" FontWeight="Bold" FontSize="14"/>
                        <TextBox IsReadOnly="True" Background="#293548" Foreground="White" FontWeight="Bold"
                                 Text="123456" Padding="5" HorizontalContentAlignment="Right"/>
                    </StackPanel>

                    <Border Grid.Row="3" Background="#293548" CornerRadius="5" Padding="5" Margin="0,0,0,10">
                        <DataGrid x:Name="InvoiceDataGrid" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False"
                                  CanUserResizeRows="False" GridLinesVisibility="None" Background="#293548" Foreground="White"
                                  RowBackground="#1e293b" AlternatingRowBackground="#162033" BorderThickness="0"
                                  SelectionMode="Single" FontSize="14" Height="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="المنتج" Binding="{Binding ProductName}" Width="*"/>
                                <DataGridTextColumn Header="الكمية" Binding="{Binding Quantity}" Width="80" />
                                <DataGridTextColumn Header="السعر" Binding="{Binding Price}" Width="100" />
                                <DataGridTextColumn Header="الإجمالي" Binding="{Binding Total}" Width="100" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
                        <StackPanel Width="100">
                            <TextBlock Text="المبلغ المتبقي" Foreground="White" Margin="0,0,0,3"
                                       FontSize="14" HorizontalAlignment="Right"/>
                            <TextBox IsReadOnly="True" Background="#293548" Foreground="White" 
                                     HorizontalContentAlignment="Right" FontWeight="Bold" Padding="5" />
                        </StackPanel>

                        <StackPanel Width="100" Margin="170,0,0,0">
                            <TextBlock Text="المبلغ المدفوع" Foreground="White" Margin="0,0,0,3"
                                       FontSize="14" HorizontalAlignment="Right"/>
                            <TextBox FontSize="14" Padding="5" HorizontalContentAlignment="Right"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="إكمال البيع" Width="100" Height="35" Background="Green" 
                                FontSize="17" Foreground="White" Margin="10"/>
                        <Button Content="إلغاء البيع" Width="100" Height="35" Background="Crimson" 
                                FontSize="17" Foreground="White" Margin="10"/>
                        <Button Content="فاتورة جديدة" Width="100" Height="35" Background="#0285c7" 
                                FontSize="17" Foreground="White" Margin="10"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
