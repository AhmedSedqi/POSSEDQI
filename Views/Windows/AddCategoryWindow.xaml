<Window x:Class="POSSEDQI.Views.Windows.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:POSSEDQI.Behaviors"
        Title="إضافة فئة جديدة" Height="174" Width="350" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Background="Orange" FontFamily="Calibri" Foreground="#162033">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="CategoryTextBox"
                behaviors:PlaceholderBehavior.PlaceholderText="اسم الفئة"
                 Text="{Binding CategoryName, UpdateSourceTrigger=PropertyChanged}"
                 Height="35" FontSize="20" Margin="0,0,0,25"
                 HorizontalContentAlignment="Right" Foreground="Black"
                 VerticalContentAlignment="Center"/>

        <Button Grid.Row="1" Command="{Binding SaveCommand}" 
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="حفظ" Width="100" Height="60" FontSize="28" Background="Green"
                HorizontalAlignment="Center" FontWeight="Bold" Foreground="White"/>
    </Grid>
</Window>
