<Window x:Class="POSSEDQI.Views.Windows.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إضافة فئة جديدة" Height="200" Width="350" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Background="Orange" FontFamily="Calibri" Foreground="#162033">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="CategoryNameTextBox" Height="35" FontSize="20" Margin="0,0,0,25"
                 Foreground="Black" Text="اسم الفئة" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
                 GotFocus="CategoryNameTextBox_GotFocus"
                 LostFocus="CategoryNameTextBox_LostFocus"/>

        <Button Grid.Row="1" Content="حفظ" Width="100" Height="60" FontSize="28" Background="Green"
                HorizontalAlignment="Center" FontWeight="Bold" Foreground="White"/>
    </Grid>
</Window>
