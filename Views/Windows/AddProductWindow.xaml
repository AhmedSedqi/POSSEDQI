<Window x:Class="POSSEDQI.Views.Windows.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إضافة منتج جديد" Height="455" Width="650" Background="Orange" FontFamily="Calibri"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- العمود الأول: عرض الصورة وزر التغيير -->
        <StackPanel Grid.Column="0" Margin="0,0,20,0" HorizontalAlignment="Center">
            <Border Width="200" Height="200" BorderBrush="#0f172a" BorderThickness="3" Background="#ede8e8" >
                <Image x:Name="ProductImage" Source="/Images/default.png" Stretch="Uniform" />
            </Border>
            <Button Content="تغيير الصورة" Margin="0,10,0,0" Width="120" Height="40" Click="ChangeImage_Click"
                    Background="#0489c7" Foreground="White" FontSize="18" FontWeight="Bold"/>
            <Button Content="حفظ المنتج" Margin="0,36,0,0" Height="105" FontSize="36" Click="SaveProduct_Click"
                    FontWeight="Bold" Background="#02523c" Foreground="White"/>

        </StackPanel>

        <!-- العمود الثاني: إدخال بيانات المنتج -->
        <StackPanel Grid.Column="1" VerticalAlignment="Top">
            <TextBlock Text="اسم المنتج" Margin="0,5,10,2" HorizontalAlignment="Right" FontSize="19" FontWeight="Bold"/>
            <TextBox x:Name="NameTextBox" Margin="0,5" Height="30" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
                     FontSize="18" FontWeight="Bold" ToolTip="اكتب اسم المنتج في هذه الخانة"/>

            <TextBlock Text="الوصف" Margin="0,10,10,2" HorizontalAlignment="Right" FontSize="19" FontWeight="Bold"/>
            <TextBox x:Name="DescriptionTextBox" Margin="0,5" Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                     HorizontalContentAlignment="Right" Background="#becad1" FontSize="16"/>

            <TextBlock Text="ثمن الشراء" Margin="0,10,10,2" HorizontalAlignment="Right" FontSize="19" FontWeight="Bold"/>
            <TextBox x:Name="PurchasePriceTextBox" Margin="0,5" Height="30" HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center" FontSize="18"/>

            <TextBlock Text="الكمية" Margin="0,10,10,2" HorizontalAlignment="Right" FontSize="18" FontWeight="Bold"/>
            <TextBox x:Name="QuantityTextBox" Margin="0,5" Height="30" HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center" FontSize="18"/>

            <TextBlock Text="الفئة" Margin="0,10,10,2" HorizontalAlignment="Right" FontSize="19" FontWeight="Bold"/>
            <ComboBox x:Name="CategoryComboBox" Margin="0,5" Height="30" FontSize="16" HorizontalContentAlignment="Right"/>

        </StackPanel>
    </Grid>
</Window>
