<Window x:Class="POSSEDQI.Views.Windows.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إضافة منتج جديد" Height="455" Width="650" Background="Orange" FontFamily="Calibri"
        WindowStartupLocation="CenterScreen">


    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,20,0" HorizontalAlignment="Center">
            <Border Width="200" Height="200" BorderBrush="#0f172a" BorderThickness="3" Background="#ede8e8">
                <Image Source="{Binding ImagePath}" Stretch="Uniform"/>
            </Border>

            <Button Content="تغيير الصورة" Margin="0,10,0,0" Width="120" Height="40"
                    Background="#0489c7" Foreground="White" FontSize="18" FontWeight="Bold"
                    Command="{Binding ChangeImageCommand}"/>

            <Button Content="حفظ المنتج" Margin="0,36,0,0" Height="105" FontSize="36"
                    FontWeight="Bold" Background="#02523c" Foreground="White"
                    Command="{Binding SaveCommand}"/>
        </StackPanel>

        <StackPanel Grid.Column="1" VerticalAlignment="Top">

            <TextBlock Text="اسم المنتج" Margin="0,5,10,2" HorizontalAlignment="Right"
                       FontSize="19" FontWeight="Bold"/>
            <TextBox Margin="0,5" Height="30" HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center" FontSize="18" FontWeight="Bold"
                     ToolTip="اكتب اسم المنتج في هذه الخانة"
                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="الوصف" Margin="0,10,10,2" HorizontalAlignment="Right"
                       FontSize="19" FontWeight="Bold"/>
            <TextBox Margin="0,5" Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                     HorizontalContentAlignment="Right" Background="#becad1" FontSize="16"
                     Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="ثمن الشراء" Margin="0,10,10,2" HorizontalAlignment="Right"
                       FontSize="19" FontWeight="Bold"/>
            <TextBox Margin="0,5" Height="30" HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center" FontSize="18"
                     Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="الكمية" Margin="0,10,10,2" HorizontalAlignment="Right"
                       FontSize="18" FontWeight="Bold"/>
            <TextBox Margin="0,5" Height="30" HorizontalContentAlignment="Right"
                     VerticalContentAlignment="Center" FontSize="18"
                     Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="الفئة" Margin="0,10,10,2" HorizontalAlignment="Right"
                       FontSize="19" FontWeight="Bold"/>
            <ComboBox Margin="0,5" Height="30" FontSize="16" HorizontalContentAlignment="Right"
                      ItemsSource="{Binding Categories}" SelectedItem="{Binding Category}"/>
        </StackPanel>
    </Grid>
</Window>
