<UserControl x:Class="POSSEDQI.Views.ClientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Background="White" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- المحتوى الرئيسي -->
            <RowDefinition Height="Auto"/>
            <!-- الأزرار -->
        </Grid.RowDefinitions>

        <!-- ✅ المحتوى الرئيسي -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- نموذج الإدخال -->
                <ColumnDefinition Width="2*" />
                <!-- جدول الزبائن -->
            </Grid.ColumnDefinitions>

            <!-- ✅ نموذج إدخال البيانات -->
            <StackPanel Grid.Column="0" Margin="20,20,20,0">
                <TextBlock Text="إدخال بيانات الزبون" FontSize="24" FontWeight="Bold" 
                           Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="اسم الزبون" HorizontalAlignment="Right" FontSize="20" FontWeight="Bold"/>
                <TextBox Name="ClientNameBox" Height="35" Margin="0,10,0,15" FontSize="22"
                         HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>

                <TextBlock Text="العنوان" HorizontalAlignment="Right" FontSize="20" FontWeight="Bold"/>
                <TextBox Name="ClientAddressBox" Height="35" Margin="0,10,0,15" FontSize="22"
                         HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>

                <TextBlock Text="رقم الهاتف:" HorizontalAlignment="Right" FontSize="20" FontWeight="Bold"/>
                <TextBox Name="ClientPhoneBox" Height="35" Margin="0,10,0,50" FontSize="22" FontFamily="Times New Roman"
                         HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
                
                <Button Width="200" Height="70" Margin="0,0,20,0" Background="Green" Foreground="White" ToolTip="حفظ معطيات زبون جديد">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="حفظ المعطيات" VerticalAlignment="Center" FontSize="24" Margin="0,0,10,0" FontWeight="Bold"/>
                        <Image Source="/Icons/add.png" Width="30" Height="30" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- ✅ جدول عرض الزبائن -->
            <DataGrid Grid.Column="1" Name="ClientsDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="10"
                      HeadersVisibility="Column"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="All">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="اسم الزبون" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="العنوان" Binding="{Binding Address}" Width="*" />
                    <DataGridTextColumn Header="رقم الهاتف" Binding="{Binding Phone}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- ✅ الأزرار وخانة البحث -->
        <DockPanel Grid.Row="1" Margin="0,10,0,0" HorizontalAlignment="Right">
            <!-- الأزرار -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">

                <Button Width="160" Height="35" Margin="20,0,15,15" Background="Red" Foreground="White" ToolTip="حذف الزبون من القائمة">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="حذف الزبون" VerticalAlignment="Center" FontSize="18" Margin="0,0,10,0" FontWeight="Bold"/>
                        <Image Source="/Icons/delete.png" Width="25" Height="25" />
                    </StackPanel>
                </Button>
                <Button Width="160" Height="35" Margin="20,0,15,15" Background="Orange" Foreground="White" ToolTip="تعديل معطيات الزبون">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="تعديل المعطيات" VerticalAlignment="Center" FontSize="18" Margin="0,0,10,0" FontWeight="Bold"/>
                        <Image Source="/Icons/edit.png" Width="25" Height="25" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- خانة البحث -->
            <TextBox Name="SearchClientBox"
                     Text="ابحث باسم الزبون" FontSize="18" FontWeight="Bold"
                     Foreground="Gray" HorizontalContentAlignment="Right"
                     Width="240" Height="35" VerticalContentAlignment="Center"
                     Margin="100,0,15,15"
                     VerticalAlignment="Center"
                     GotFocus="SearchClientBox_GotFocus"
                     LostFocus="SearchClientBox_LostFocus"/>

            
        </DockPanel>
    </Grid>
</UserControl>
